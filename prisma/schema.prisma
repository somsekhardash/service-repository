generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb+srv://sdash:Value*123@somcluster.1cyvrwm.mongodb.net/test?retryWrites=true&w=majority"
}

model Event {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String
  type         EventType
  startDate    DateTime?
  endDate      DateTime?     
  isCompleted  Boolean
  tag          String[]
  default      Int 
  frequency    EventFrequency
  user         User           @relation(fields: [userId], references: [id])
  userId       String         @db.ObjectId
  notification Notification[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Notification {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  amount      Int
  details     String
  paidDate    DateTime
  nextDate    DateTime
  isCompleted Boolean
  title       String
  tag         String[]
  eventId     String   @db.ObjectId
  event       Event    @relation(fields: [eventId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  mobileNumber Int
  userName     String
  passWord     String
  role         String?
  events       Event[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  salt         String?
  refreshToken String?
  @@unique([mobileNumber, refreshToken])
}

enum EventFrequency {
  CUSTOM
  MONTH
  DAY
  WEEK
  YEAR
}

enum EventType {
  DEBIT
  CREDIT
}